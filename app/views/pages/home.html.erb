<div class="plan-grid" data-controller="pricing">
  <div class="monthly-plan" data-action="load@window->pricing#getMonthlyPrice" data-controller="checkout">
    <h2>Monthly Plan</h2>
    <p>Price: <span data-pricing-target="monthly">...</span></p>
    <button data-product="42490" data-action="click->checkout#openCheckout" data-checkout-target="monthlyCheckout">Subscribe</button>
  </div>
  <div class="annual-plan" data-action="load@window->pricing#getAnnualPrice" data-controller="checkout">
    <h2>Annual Plan</h2>
    <p>Price: <span data-pricing-target="annual">...</span></p>
    <button data-product="42491" data-action="click->checkout#openCheckout" data-checkout-target="annualCheckout">Subscribe</button>
  </div>
</div>
<div class="checkout-container"></div>
